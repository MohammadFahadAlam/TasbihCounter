<resources xmlns:tools="http://schemas.android.com/tools">
    <!-- Base application theme. -->
    <style name="Theme.TasbihCounter" parent="Theme.MaterialComponents.DayNight.NoActionBar">
        <!-- Primary brand color. -->
        <item name="colorPrimary">@color/night_mode</item>
        <item name="colorPrimaryVariant">@color/night_mode</item>
        <item name="colorOnPrimary">@color/night_mode</item>
        <!-- Secondary brand color. -->
        <item name="colorSecondary">@color/night_blue</item>
        <item name="colorSecondaryVariant">@color/teal_200</item>
        <item name="colorOnSecondary">@color/black</item>
        <!-- Status bar color. -->
        <item name="android:statusBarColor">?attr/colorPrimaryVariant</item>
        <!-- Customize your theme here. -->
        <item name="android:textColor">@color/black</item>
        <item name="android:windowBackground">@color/night_mode</item>
        <item name="bottomSheetDialogTheme">@style/BottomSheetTheme</item>

    </style>

    <!--    BottomSheetTheme-->
    <style name="BottomSheetTheme" parent="Theme.Design.BottomSheetDialog">
        <item name="bottomSheetStyle">@style/AppCustomStyle</item>
    </style>

    <style name="AppCustomStyle" parent="Widget.Design.BottomSheet.Modal">
        <item name="android:background">@drawable/upper_corner_radius_20_dp</item>
    </style>

    <!--    Counter TextView text Color-->
    <style name="CounterTvColor" parent="Theme.TasbihCounter">
        <item name="android:textColor">@color/of_white</item>
    </style>

    <!--    Counter TextView Background-->
    <style name="CounterTvThemeBg" parent="Theme.TasbihCounter">
        <item name="android:background">@color/counter_tv_night_bg</item>
    </style>

    <!--    ThreeDot Menu Tint Theme-->
    <style name="MenuThreeDotTheme" parent="Theme.TasbihCounter">
        <item name="android:tint">@color/white</item>
    </style>

    <!--    ExpendableFloatingActionBtn IconTint & textColor Theme-->
    <style name="ExpendableFloatingActionBtnTheme" parent="Theme.TasbihCounter">
        <item name="android:textColor">@color/black</item>
        <item name="android:tint">@color/black</item>
    </style>
</resources>