<?xml version="1.0" encoding="utf-8"?>
<com.google.android.material.card.MaterialCardView xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    app:cardCornerRadius="10dp"
    app:cardMaxElevation="3dp"
    app:cardElevation="3dp"
    android:translationZ="2dp"
    android:layout_marginStart="10dp"
    android:layout_marginTop="10dp"
    android:layout_marginEnd="10dp"
    android:id="@+id/rootCv">

    <RelativeLayout
        android:id="@+id/rlContainer"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        style="@style/CounterTvColor">

        <TextView
            android:id="@+id/tasbihTitleTv"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_alignParentStart="true"
            android:layout_alignParentTop="true"
            android:layout_toStartOf="@id/imgv_menu"
            android:layout_marginStart="10dp"
            android:layout_marginTop="8dp"
            android:paddingTop="2dp"
            android:layout_marginEnd="10dp"
            android:layout_marginBottom="8dp"
            tools:text="ইয়া মুমিনু"
            android:textSize="24sp"
            android:theme="@style/CounterTvColor"
            android:fontFamily="@font/sutonnymj_regular"/>

        <TextView
            android:id="@+id/tasbihDetailsTv"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_alignParentStart="true"
            android:layout_below="@+id/tasbihTitleTv"
            android:layout_marginStart="10dp"
            android:paddingTop="2dp"
            android:layout_marginEnd="10dp"
            android:layout_marginBottom="5dp"
            tools:text="ইয়া মুমিনু"
            android:textSize="16sp"
            android:theme="@style/CounterTvColor"
            android:fontFamily="@font/sutonnymj_regular"/>

        <ImageView
            android:id="@+id/imgv_menu"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:src="@drawable/ic_three_dot"
            android:layout_alignParentEnd="true"
            android:layout_alignParentTop="true"
            android:padding="8dp"
            android:theme="@style/MenuThreeDotTheme"
            android:background="@drawable/click_effect"
            />

        <TextView
            android:id="@+id/countTitle"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_below="@id/tasbihDetailsTv"
            android:layout_marginStart="10dp"
            android:layout_marginTop="5dp"
            android:text="@string/total_counts"
            android:theme="@style/CounterTvColor" />

        <androidx.cardview.widget.CardView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_below="@id/tasbihDetailsTv"
            android:layout_toEndOf="@+id/countTitle"
            android:layout_marginStart="10dp"
            android:layout_marginBottom="10dp"
            app:cardElevation="0dp"
            app:cardCornerRadius="20dp"
            android:theme="@style/CounterTvThemeBg">

            <LinearLayout
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:orientation="horizontal"
                android:layout_gravity="center"
                android:gravity="center">

                <TextView
                    android:id="@+id/tasbihCounterTv"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:gravity="center"
                    android:layout_gravity="center"
                    android:paddingStart="10dp"
                    android:paddingTop="5dp"
                    android:paddingEnd="10dp"
                    android:paddingBottom="5dp"
                    tools:text="33"
                    android:theme="@style/CounterTvColor" />

            </LinearLayout>

        </androidx.cardview.widget.CardView>

        <TextView
            android:id="@+id/dateTimeTv"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_below="@id/tasbihDetailsTv"
            android:layout_alignParentEnd="true"
            android:layout_marginStart="10dp"
            android:layout_marginTop="5dp"
            android:layout_marginEnd="10dp"
            android:layout_marginBottom="10dp"
            android:text="06-08-2022 08:00:00 PM"
            android:theme="@style/CounterTvColor" />

    </RelativeLayout>


</com.google.android.material.card.MaterialCardView>